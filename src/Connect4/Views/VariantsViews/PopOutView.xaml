    </Page.Resources>


    <Page.DataContext>
        <viewModel:PopOutViewModel/>
    </Page.DataContext>

    <Grid x:Name="MainGrid" DataContext="{Binding}" >


        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- BACK GROUND -->
        <Image Grid.Row="0" Grid.RowSpan="2" Source="\Resources\Images\BackGrounds\BackGroundDefault.png" Stretch="Fill"/>

        <!-- GRID CONNECT 4 -->
