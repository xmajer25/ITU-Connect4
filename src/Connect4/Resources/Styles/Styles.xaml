<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Input Field Style-->
    <Style x:Key="InputFieldStyle" TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Image Source="/Resources/Images/StaticImages/InputField.png" Width="250" Height="30" Margin="0"/>
                        <ScrollViewer x:Name="PART_ContentHost" VerticalContentAlignment="Bottom" Margin="5"/>
                    </Grid>                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <!--Pixel Text??-->
    <Style x:Key="PixelTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="FontFamily" Value="Press Start 2P"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="Aliased"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

</ResourceDictionary>