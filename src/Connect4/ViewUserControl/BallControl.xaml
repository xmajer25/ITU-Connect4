<!-- Brief  : UserControl For Token Used In Connect4 -->
    
<UserControl x:Class="Connect4.ViewUserControl.BallControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Connect4.ViewUserControl" 
             xmlns:viewmodel="clr-namespace:Connect4.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:CrazyHouseViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Image x:Name="Token" Source="{Binding TokenSkin}" Width="35" Height="35"/>
</UserControl>